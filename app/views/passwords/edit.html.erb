<% @page_title = "パスワード変更" %>

<div class="form-group">
  <%= form_with model: @change_password_form, url: :password,
         method: :patch do |f| %>
    <div class="control-label">
      <%= f.label :current_password, "現在のパスワード" %>
    </div>
    <div class="form-group">
      <%= f.password_field :current_password %>
    </div>
    <div class="control-label">
      <%= f.label :new_password, "新しいパスワード" %>
    </div>
    <div class="form-group">
      <%= f.password_field :new_password %>
    </div>
    <div class="control-label">
      <%= f.label :new_password_confirmation, "新しいパスワード 確認" %>
    </div>
    <div class="form-group">
      <%= f.password_field :new_password_confirmation %>
    </div>
    <p><%= f.submit "変更", class: "btn btn-warning" %></p>
    <p><%= link_to "戻る", :account %></p>
  <% end %>
</div>