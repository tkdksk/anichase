<% @page_title = "お問い合わせ" %>

<div class="row">
  <%= form_with(model: @contact, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :name, "お名前",
        class: "col-sm-12 col-form-label" %>
      <div class="col-sm-12">
        <%= f.text_field :name, value: current_member&.name,
          class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス",
        class: "col-sm-12 col-form-label" %>
      <div class="col-sm-12">
        <%= f.text_field :email, value: current_member&.email,
          class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :content, "本文",
        class: "col-sm-12 col-form-label" %>
      <div class="col-sm-12">
        <%= f.text_area :content, class: "form-control" %>
      </div>
    </div>

    <div class="col-sm-12">
      <p><%= f.submit "送信", class: "btn btn-warning" %></p>
    </div>
    <p><%= link_to "戻る", :root %></p>
  <%end%>
</div>
