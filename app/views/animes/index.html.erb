<% @page_title = "アニメ一覧" %>

<%= form_with(url: :search_animes,:method => "get") do %>
  <div class="col-sm-12">
    <p>
      <%= text_field :search, class: "form-control" %>
      <%= submit_tag "検索", :title => nil,
        class: "btn btn-warning btn-sm" %>
    </p>
  </div>
<%end%>

<ul class="list-group list-group-flush" style="max-width: 400px;">
  <% @animes.each do |anime| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to anime.title, anime_path(anime.id) %>
      <span class="badge badge-nomal"><%= anime.posts.count %>コメント</span>
    </li>
  <%end%>
</ul>

<%= paginate @animes %>