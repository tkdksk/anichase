<% @page_title = "ログイン" %>

<div class="row">
  <%= form_with model: @form, url: :session do |f| %>
    <div class="form-group">
      <%= f.label :email, "メールアドレス", class: "col-sm-12 col-form-label" %>
      <div class="col-sm-12">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, "パスワード", class: "col-sm-12 col-form-label" %>
      <div class="col-sm-12">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm-12">
      <p><%= f.submit "ログイン", class: "btn btn-success" %></p>
    </div>
    <p><%= link_to "戻る", :root %></p>
  <%end%>
</div>