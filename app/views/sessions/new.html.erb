<% @page_title = "ログイン" %>
<h1><%= @page_title %></h1>

<div id="login-form">
  <h1><%= @title %></h1>

  <%= form_with model: @form, url: :session do |f| %>
    <div>
      <%= f.label :email, "メールアドレス" %>
      <%= f.text_field :email %>
    </div>
    <div>
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
</div>