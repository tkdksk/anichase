<% @page_title = "新規登録" %>

<div class="row">
  <%= form_with model: @member, url: @member do |f| %>
    <div class="form-group">
      <%= f.label :name, "アカウント名", class: "col-sm-12 col-form-label" %>
      <div class="col-sm-12">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス", class: "col-sm-12 col-form-label" %>
      <div class="col-sm-12">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード", class: "col-sm-12 col-form-label" %>
      <div class="col-sm-12">
        <%= f.text_field :password, class: "form-control" %>
      </div>
    </div>
    
    <div class="col-sm-12">
      <p><%= f.submit "登録", class: "btn btn-warning" %></p>
    </div>
    <p><%= link_to "戻る", :root %></p>
  <%end%>
</div>